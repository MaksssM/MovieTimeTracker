<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Modern Header with Gradient -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Gradient Background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/bg_premium_gradient" />

                <!-- Glow Effect -->
                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_glow_accent"
                    android:alpha="0.3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="48dp">

                    <!-- Greeting Section -->
                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_back"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:alpha="0.85"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Кіноман"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Total Time Card - Premium Style -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:strokeWidth="0dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_glass_card"
                            android:padding="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="20dp"
                                android:gravity="center_vertical">

                                <!-- Total Time -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/total_watch_time"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif-medium"
                                        android:letterSpacing="0.05" />

                                    <TextView
                                        android:id="@+id/tvTotalTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:textColor="@color/primary"
                                        android:textSize="30sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium"
                                        tools:text="125 год" />

                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="56dp"
                                    android:layout_marginHorizontal="18dp"
                                    android:background="@color/divider" />

                                <!-- This Month -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/this_month"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif-medium"
                                        android:letterSpacing="0.05" />

                                    <TextView
                                        android:id="@+id/tvThisMonthCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:textColor="@color/accent"
                                        android:textSize="30sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium"
                                        tools:text="8" />

                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </FrameLayout>

            <!-- Main Content with rounded top corners -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:orientation="vertical"
                android:background="@drawable/bg_content_rounded_top"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="100dp">

                <!-- Quick Stats Section - Modern Grid -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_stats"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:layoutAnimation="@anim/layout_animation_stagger">

                    <!-- Movies Stat Card -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_stat_tile_primary"
                                android:padding="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="14dp"
                                    android:gravity="center">

                                    <FrameLayout
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:background="@drawable/bg_glass_card">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_movie_24"
                                            app:tint="@android:color/white"
                                            android:contentDescription="@string/movies" />

                                    </FrameLayout>

                                    <TextView
                                        android:id="@+id/tvWatchedMoviesCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:textColor="@android:color/white"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium"
                                        tools:text="15" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/movies"
                                        android:textColor="@android:color/white"
                                        android:textSize="11sp"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end" />

                                </LinearLayout>

                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </FrameLayout>

                    <!-- TV Shows Stat Card -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_stat_tile_accent"
                                android:padding="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="14dp"
                                    android:gravity="center">

                                    <FrameLayout
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:background="@drawable/bg_glass_card">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_tv_24"
                                            app:tint="@android:color/white"
                                            android:contentDescription="@string/tv_shows" />

                                    </FrameLayout>

                                    <TextView
                                        android:id="@+id/tvWatchedTvShowsCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:textColor="@android:color/white"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium"
                                        tools:text="8" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/tv_shows"
                                        android:textColor="@android:color/white"
                                        android:textSize="11sp"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end" />

                                </LinearLayout>

                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </FrameLayout>

                    <!-- Rating Stat Card -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_stat_tile_success"
                                android:padding="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="14dp"
                                    android:gravity="center">

                                    <FrameLayout
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:background="@drawable/bg_glass_card">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_star_filled_24"
                                            app:tint="@android:color/white"
                                            android:contentDescription="@string/avg_rating" />

                                    </FrameLayout>

                                    <TextView
                                        android:id="@+id/tvAverageRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:textColor="@android:color/white"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium"
                                        tools:text="8.2" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:text="@string/rating_short"
                                        android:textColor="@android:color/white"
                                        android:textSize="11sp"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:ellipsize="end" />

                                </LinearLayout>

                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </FrameLayout>

                </LinearLayout>

                <!-- Categories Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/categories"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp" />

                <!-- Categories Grid - Modern Design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:layoutAnimation="@anim/layout_animation_stagger">

                    <!-- Watched Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardWatched"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@android:color/transparent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_card_primary_ripple">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:gravity="center">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/bg_glow_primary"
                                    android:alpha="0.2" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginTop="-48dp"
                                    android:src="@drawable/ic_check_24"
                                    android:contentDescription="@string/nav_watched"
                                    app:tint="@android:color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dp"
                                    android:text="@string/nav_watched"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/tvWatchedCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textColor="@android:color/white"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium"
                                    tools:text="23" />

                            </LinearLayout>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Planned Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPlanned"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@android:color/transparent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_card_accent_ripple">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:gravity="center">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/bg_glow_accent"
                                    android:alpha="0.2" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginTop="-48dp"
                                    android:src="@drawable/ic_bookmark_filled_24"
                                    android:contentDescription="@string/nav_planned"
                                    app:tint="@android:color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dp"
                                    android:text="@string/nav_planned"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/tvPlannedCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textColor="@android:color/white"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium"
                                    tools:text="8" />

                            </LinearLayout>

                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Watching Card - Full Width -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWatching"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/transparent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_card_success_ripple">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center_vertical">

                            <FrameLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_glow_accent"
                                    android:alpha="0.15" />

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_play_circle_24"
                                    android:contentDescription="@string/nav_watching"
                                    app:tint="@android:color/white" />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nav_watching"
                                    android:textColor="@android:color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/currently_in_progress"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:alpha="0.85"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvWatchingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                tools:text="3" />

                        </LinearLayout>

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Actions Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_actions"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <!-- Quick Actions Grid - 2x2 -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:layout_marginBottom="12dp"
                    android:useDefaultMargins="false">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnSearchMovies"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/divider"
                        android:clickable="true"
                        android:focusable="true"
                        app:rippleColor="@color/accent_light"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="8dp"
                            android:gravity="center"
                            android:background="@drawable/bg_card_surface_gradient">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_search_24"
                                app:tint="@color/accent"
                                android:contentDescription="@string/search" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/search"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnTrending"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/divider"
                        android:clickable="true"
                        android:focusable="true"
                        app:rippleColor="@color/accent_light"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="8dp"
                            android:gravity="center"
                            android:background="@drawable/bg_card_surface_gradient">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_trending_up_24"
                                app:tint="@color/success"
                                android:contentDescription="@string/trending" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/trending"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnUpcomingReleases"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/divider"
                        android:clickable="true"
                        android:focusable="true"
                        app:rippleColor="@color/accent_light"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="8dp"
                            android:gravity="center"
                            android:background="@drawable/bg_card_surface_gradient">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar_24"
                                app:tint="@color/primary"
                                android:contentDescription="@string/movie_premieres" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/new_releases"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnFriends"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/divider"
                        android:clickable="true"
                        android:focusable="true"
                        app:rippleColor="@color/accent_light"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="8dp"
                            android:gravity="center"
                            android:background="@drawable/bg_card_surface_gradient">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_people_24"
                                app:tint="@color/warning"
                                android:contentDescription="@string/friends" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/friends"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>


                <!-- Recommendations Section -->
                <TextView
                    android:id="@+id/tvRecommendationsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Рекомендовано для вас"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:listitem="@layout/item_content_poster" />

                <!-- Recent Activity Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/recent_activity"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/btnSeeAllActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Всі"
                            android:textColor="@color/accent"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Recent Activity List with modern styling -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvRecentActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:listitem="@layout/item_recent_activity"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:nestedScrollingEnabled="false"
                            android:paddingVertical="8dp"
                            android:background="@drawable/bg_card_surface_gradient" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB for quick add -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:contentDescription="@string/add_movie"
        android:src="@drawable/ic_add_24"
        app:tint="@android:color/white"
        android:background="@drawable/bg_fab_modern"
        app:elevation="12dp"
        app:borderWidth="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

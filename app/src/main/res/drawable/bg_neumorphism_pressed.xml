<?xml version="1.0" encoding="utf-8"?>
<!-- Neumorphism pressed effect - simulates button pressed into surface -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer inset shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="135"
                android:startColor="#40000000"
                android:centerColor="#20000000"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner surface (sunken) -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp" />
            <solid android:color="#141B27" />
        </shape>
    </item>
    
    <!-- Inner shadow (top-left darker) -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp" />
            <gradient
                android:angle="135"
                android:startColor="#30000000"
                android:centerColor="#00000000"
                android:endColor="#08FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>

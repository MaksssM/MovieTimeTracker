<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider"
    app:cardBackgroundColor="@color/card_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/card_press_animator">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Purple left accent bar -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_accent_bar_planned" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp">

        <!-- Poster -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/posterCard"
            android:layout_width="90dp"
            android:layout_height="135dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="#50A855F7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/poster_description"
                    android:background="@color/shimmer_base"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <!-- Bottom gradient -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_overlay_dark" />

                <!-- Media Type Badge -->
                <TextView
                    android:id="@+id/tvMediaType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="6dp"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textSize="9sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.04"
                    tools:text="TV" />

                <!-- Rating Badge -->
                <LinearLayout
                    android:id="@+id/layoutRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="6dp"
                    android:background="@drawable/bg_rating_badge_gold"
                    android:orientation="horizontal"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/ic_star_filled_24"
                        app:tint="#FBBF24"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textSize="10sp"
                        android:textColor="#FBBF24"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        tools:text="8.5" />

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/posterCard"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintStart_toEndOf="@id/posterCard"
            app:layout_constraintTop_toTopOf="@id/posterCard"
            app:layout_constraintVertical_bias="0.0">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.15"
                tools:text="Breaking Bad" />

            <!-- Release Year -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/accent_purple_light"
                    android:contentDescription="@string/release_date" />

                <TextView
                    android:id="@+id/tvReleaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium"
                    tools:text="2025" />

            </LinearLayout>

            <!-- Info Row: Episodes/Seasons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Episodes -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_type_badge_tv"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp" android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_play_circle_24"
                        app:tint="#A855F7"
                        android:contentDescription="@string/runtime" />

                    <TextView
                        android:id="@+id/tvEpisodes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textSize="12sp"
                        android:textColor="#A855F7"
                        android:fontFamily="sans-serif-medium"
                        tools:text="52 eps" />

                </LinearLayout>

                <!-- Seasons/Total Duration -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_type_badge_movie"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp" android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/accent_primary"
                        android:contentDescription="@string/runtime" />

                    <TextView
                        android:id="@+id/tvSeasons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textSize="12sp"
                        android:textColor="@color/accent_primary"
                        android:fontFamily="sans-serif-medium"
                        tools:text="5 seasons" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Delete Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="#60EF4444"
            app:cardBackgroundColor="#30EF4444"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_forever_24"
                app:tint="@color/error_light"
                android:contentDescription="@string/delete" />

        </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

        <!-- Gradient top strip overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/bg_card_top_strip_planned"
            android:alpha="0.9" />

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<!-- Premium gradient background for main screen - DARK THEME -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Deep dark base - premium navy-black -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="160"
                android:startColor="#0A0E14"
                android:centerColor="#0D1117"
                android:endColor="#0F141A"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle blue ambient glow - top left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:centerX="0.05"
                android:centerY="0.1"
                android:startColor="#183B82F6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Accent purple glow - bottom right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="0.95"
                android:centerY="0.85"
                android:startColor="#12A78BFA"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Cyan accent glow - center right for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:centerX="0.85"
                android:centerY="0.4"
                android:startColor="#0A06B6D4"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Very subtle warm accent - bottom left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="0.1"
                android:centerY="0.9"
                android:startColor="#08F59E0B"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Subtle light sweep for premium feel -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#02FFFFFF"
                android:centerColor="#00000000"
                android:endColor="#02FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>

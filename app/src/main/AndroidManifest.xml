<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MovieTimeApp"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieTimeTracker"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.collection.CollectionDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieTimeTracker" />
        <activity
            android:name=".ui.details.DetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.details.TvDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.search.EnhancedSearchActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.person.PersonDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.upcoming.UpcomingReleasesActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.friends.FriendsActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.planned.PlannedActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.watching.WatchingActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.statistics.StatisticsActivity"
            android:exported="false"
            android:label="@string/statistics"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.today.TodayActivity"
            android:exported="false"
            android:label="@string/today"
            android:theme="@style/Theme.MovieTimeTracker" />

        <activity
            android:name=".ui.test.TestDatabaseActivity"
            android:exported="false"
            android:label="Test Database"
            android:theme="@style/Theme.MovieTimeTracker" />
    </application>

</manifest>
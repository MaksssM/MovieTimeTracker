<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Stats Widget Background - DARK THEME -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow effect -->
    <item
        android:left="-4dp"
        android:right="-4dp"
        android:top="-4dp"
        android:bottom="-4dp">
        <shape android:shape="rectangle">
            <corners android:radius="32dp" />
            <gradient
                android:angle="135"
                android:startColor="#1560A5FA"
                android:centerColor="#10A855F7"
                android:endColor="#1510B981"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Main gradient background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="135"
                android:startColor="#1A1F35"
                android:centerColor="#151A2E"
                android:endColor="#101525"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass overlay -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="145"
                android:startColor="#18FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#05FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#12FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="#25FFFFFF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

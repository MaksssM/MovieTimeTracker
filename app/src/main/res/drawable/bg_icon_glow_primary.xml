<?xml version="1.0" encoding="utf-8"?>
<!-- Glowing icon container - Primary Blue -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer soft glow -->
    <item
        android:left="-6dp"
        android:right="-6dp"
        android:top="-6dp"
        android:bottom="-6dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="30dp"
                android:startColor="#503B82F6"
                android:endColor="#003B82F6" />
        </shape>
    </item>
    
    <!-- Main circle with vibrant gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#93C5FD"
                android:centerColor="#3B82F6"
                android:endColor="#1D4ED8"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner shadow for depth -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#00000000"
                android:endColor="#20000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top shine highlight -->
    <item
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="22dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#30FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>

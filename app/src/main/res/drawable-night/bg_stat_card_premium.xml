<?xml version="1.0" encoding="utf-8"?>
<!-- Large stat card with premium gradient - DARK THEME -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow effect -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                android:angle="135"
                android:startColor="#30A78BFA"
                android:centerColor="#155DA0FF"
                android:endColor="#30A78BFA"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass base with gradient -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="145"
                android:startColor="#30FFFFFF"
                android:centerColor="#18FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<!-- Premium gradient background for main screen - LIGHT THEME -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft light base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="160"
                android:startColor="#F8F0FF"
                android:centerColor="#FFFFFF"
                android:endColor="#EEF2FF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Blue ambient glow - top left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:centerX="0.04"
                android:centerY="0.06"
                android:startColor="#503B82F6"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Rose/pink glow - center -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="0.42"
                android:centerY="0.32"
                android:startColor="#38EC4899"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Violet/purple glow - bottom right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="0.95"
                android:centerY="0.88"
                android:startColor="#408B5CF6"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Cyan accent - center right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="560dp"
                android:centerX="0.88"
                android:centerY="0.42"
                android:startColor="#3006B6D4"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Warm green-lime glow - bottom left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="650dp"
                android:centerX="0.06"
                android:centerY="0.92"
                android:startColor="#2810B981"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Indigo - top right corner -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:centerX="0.92"
                android:centerY="0.05"
                android:startColor="#286366F1"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Diagonal shimmer shimmer overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#00FFFFFF"
                android:centerColor="#0AFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/android:colorBackground" />
        </shape>
    </item>
    
    <!-- Top Left Glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="0.0"
                android:centerY="0.0"
                android:startColor="#1A3B82F6" 
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Bottom Right Glow -->
    <item>
        <shape android:shape="rectangle">
             <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="1.0"
                android:centerY="1.0"
                android:startColor="#1A8B5CF6"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<!-- Glowing play button background (circle with radial glow) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer soft glow ring -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#30FFFFFF" />
        </shape>
    </item>

    <!-- Main circle -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#CCFFFFFF"
                android:endColor="#60FFFFFF" />
        </shape>
    </item>

</layer-list>

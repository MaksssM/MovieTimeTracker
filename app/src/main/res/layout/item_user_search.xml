<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#12FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="46dp"
            android:layout_height="46dp"
            app:cardCornerRadius="23dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#2060A5FA">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_24"
                android:background="#1560A5FA"
                android:padding="10dp"
                app:tint="#60A5FA"
                android:contentDescription="@null" />
        </com.google.android.material.card.MaterialCardView>

        <!-- User info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Анна Мельник" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                tools:text="@annamelnyk" />
        </LinearLayout>

        <!-- Add friend button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddFriend"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="@string/add_friend_short"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:backgroundTint="#60A5FA"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_person_add_24"
            app:iconSize="16dp"
            app:iconPadding="4dp"
            app:iconGravity="textStart" />

        <!-- Request sent indicator -->
        <TextView
            android:id="@+id/txtRequestSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_sent"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="gone" />

        <!-- Already friends indicator -->
        <ImageView
            android:id="@+id/imgAlreadyFriends"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_24"
            app:tint="#22C55E"
            android:visibility="gone"
            android:contentDescription="@string/already_friends"
            tools:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

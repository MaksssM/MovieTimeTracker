<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:scrollbars="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- APPEARANCE SECTION -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_appearance"
            android:textAppearance="@style/TextAppearance.App.Title"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <!-- Theme Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_theme"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_title"
                        android:textAppearance="@style/TextAppearance.App.Title"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroupTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioThemeSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_system"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radioThemeLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_light"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radioThemeDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_dark"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Language Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_language"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_title"
                        android:textAppearance="@style/TextAppearance.App.Title"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroupLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioLangUk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lang_uk"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radioLangRu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lang_ru"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radioLangEn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lang_en"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- CONTENT SECTION -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_content"
            android:textAppearance="@style/TextAppearance.App.Title"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <!-- TMDB Content Language -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_movie"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tmdb_content_language"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tmdb_content_language_desc"
                            android:textAppearance="@style/TextAppearance.App.Subtitle"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroupTmdbLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioTmdbLangUk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lang_uk"
                        android:textSize="14sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <RadioButton
                        android:id="@+id/radioTmdbLangRu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lang_ru"
                        android:textSize="14sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <RadioButton
                        android:id="@+id/radioTmdbLangEn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lang_en"
                        android:textSize="14sp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Display Options -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Show Ratings Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_24"
                        android:tint="?attr/colorSecondary"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/show_ratings"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/show_ratings_desc"
                            android:textAppearance="@style/TextAppearance.App.Subtitle"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchShowRatings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginVertical="8dp" />

                <!-- Compact Mode Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_grid"
                        android:tint="?attr/colorTertiary"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/compact_mode"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/compact_mode_desc"
                            android:textAppearance="@style/TextAppearance.App.Subtitle"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCompactMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginVertical="8dp" />

                <!-- Auto-play Trailers Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_play"
                        android:tint="?attr/colorError"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/autoplay_trailers"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/autoplay_trailers_desc"
                            android:textAppearance="@style/TextAppearance.App.Subtitle"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAutoplayTrailers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- DATA MANAGEMENT SECTION -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_management"
            android:textAppearance="@style/TextAppearance.App.Title"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Clear Cache Button -->
                <LinearLayout
                    android:id="@+id/layoutClearCache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_cached"
                        android:tint="@color/secondary_text"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_cache"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/tvCacheSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calculating"
                            android:textAppearance="@style/TextAppearance.App.Subtitle"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginVertical="4dp" />

                <!-- Export Data Button -->
                <LinearLayout
                    android:id="@+id/layoutExportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_export"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/export_data"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/export_data_desc"
                            android:textAppearance="@style/TextAppearance.App.Subtitle"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginVertical="4dp" />

                <!-- Clear All Data Button -->
                <LinearLayout
                    android:id="@+id/layoutClearAllData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delete"
                        android:tint="?attr/colorError"
                        android:layout_marginEnd="12dp"
                        tools:ignore="UseAppTint" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_all_data"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textColor="@color/error" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_all_data_desc"
                            android:textAppearance="@style/TextAppearance.App.Subtitle"
                            android:textColor="@color/secondary_text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ABOUT SECTION -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_title"
            android:textAppearance="@style/TextAppearance.App.Title"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- App Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="16dp"

                    android:background="@drawable/bg_card_gradient_stroke"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher_round"
                        android:scaleType="centerCrop" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.App.Headline1"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_placeholder"
                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_description"
                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                    android:textColor="@color/secondary_text"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginVertical="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/powered_by_tmdb"
                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="© 2025 MovieTime"
                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_glass_card">

        <!-- Poster with rounded corners -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/posterCard"
            android:layout_width="70dp"
            android:layout_height="105dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/poster_description"
                    android:background="@color/shimmer_base"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <!-- Media Type Badge -->
                <TextView
                    android:id="@+id/tvMediaType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="6dp"
                    android:paddingTop="2dp" android:paddingBottom="2dp"
                    android:textSize="9sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    tools:text="TV" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@id/posterCard"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintStart_toEndOf="@id/posterCard"
            app:layout_constraintTop_toTopOf="@id/posterCard">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:minHeight="32dp"
                android:gravity="center_vertical"
                tools:text="Breaking Bad" />

            <!-- Release Year -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/text_secondary"
                    android:contentDescription="@string/release_date" />

                <TextView
                    android:id="@+id/tvReleaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    tools:text="2025" />

            </LinearLayout>

            <!-- Info Row: Episodes/Seasons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Episodes -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_chip_surface"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="4dp" android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_play_circle_24"
                        app:tint="@color/accent"
                        android:contentDescription="@string/runtime" />

                    <TextView
                        android:id="@+id/tvEpisodes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="11sp"
                        android:textColor="@color/accent"
                        android:fontFamily="sans-serif-medium"
                        tools:text="52 eps" />

                </LinearLayout>

                <!-- Seasons/Total Duration -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_chip_surface"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="4dp" android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/accent"
                        android:contentDescription="@string/runtime" />

                    <TextView
                        android:id="@+id/tvSeasons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="11sp"
                        android:textColor="@color/accent"
                        android:fontFamily="sans-serif-medium"
                        tools:text="5 seasons" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Delete Button -->
        <FrameLayout
            android:id="@+id/btnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_icon_button_glass"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_close_24"
                app:tint="@color/error"
                android:contentDescription="@string/delete" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

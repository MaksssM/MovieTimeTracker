<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Deep dark base - premium navy-black -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="160"
                android:startColor="#FF0A0E14"
                android:centerColor="#FF0D1117"
                android:endColor="#FF0F141A" />
        </shape>
    </item>
    
    <!-- Subtle blue ambient glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="70%p"
                android:centerX="85%"
                android:centerY="15%"
                android:startColor="#153B82F6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Secondary purple accent glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="60%p"
                android:centerX="15%"
                android:centerY="85%"
                android:startColor="#10A78BFA"
                android:endColor="#00000000" />
        </shape>
    </item>
    
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.FAB" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:backgroundTint">@color/md_theme_light_primary</item>
        <item name="elevation">8dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardBackgroundColor">@color/card_bg</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/md_theme_light_primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.App.TextView.Title" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.TextView.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/tertiary_text</item>
    </style>


    <!-- Chip Styles for Filters -->
    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">@color/primary_text</item>
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Search Result Card -->
    <style name="Widget.App.SearchResultCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_bg</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<!-- Icon container - Purple Accent - LIGHT THEME -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Subtle shadow for light theme -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="4dp"
        android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#15A855F7" />
        </shape>
    </item>
    
    <!-- Main circle with vibrant gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#C4B5FD"
                android:centerColor="#A855F7"
                android:endColor="#8B5CF6"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner shadow for depth -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#00000000"
                android:endColor="#15000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top shine highlight (subtle) -->
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="6dp"
        android:bottom="26dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#20FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>

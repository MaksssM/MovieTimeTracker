<?xml version="1.0" encoding="utf-8"?>
<!-- Neumorphism card with soft shadows -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer dark shadow (bottom-right) -->
    <item
        android:left="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#25000000" />
        </shape>
    </item>
    
    <!-- Outer light highlight (top-left) -->
    <item
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#10FFFFFF" />
        </shape>
    </item>
    
    <!-- Main card surface -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:angle="145"
                android:startColor="#1F2937"
                android:centerColor="#1A2332"
                android:endColor="#151D2B"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top highlight edge -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:angle="180"
                android:startColor="#15FFFFFF"
                android:centerColor="#05FFFFFF"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle border -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <stroke
                android:width="1dp"
                android:color="#15FFFFFF" />
        </shape>
    </item>
    
</layer-list>

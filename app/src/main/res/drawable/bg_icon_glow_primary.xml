<?xml version="1.0" encoding="utf-8"?>
<!-- Glowing icon container - Primary Blue -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow -->
    <item
        android:left="-4dp"
        android:right="-4dp"
        android:top="-4dp"
        android:bottom="-4dp">
        <shape android:shape="oval">
            <solid android:color="#303B82F6" />
        </shape>
    </item>
    
    <!-- Main circle with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#60A5FA"
                android:centerColor="#3B82F6"
                android:endColor="#2563EB"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top shine effect -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="3dp"
        android:bottom="26dp">
        <shape android:shape="oval">
            <solid android:color="#20FFFFFF" />
        </shape>
    </item>
    
</layer-list>

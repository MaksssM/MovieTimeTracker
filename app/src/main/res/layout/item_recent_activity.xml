<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="@drawable/ripple_card_rounded"
    android:stateListAnimator="@animator/card_elevation"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:background="@drawable/bg_activity_item">

        <!-- Activity Icon with gradient background -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_activity_icon_container">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic_check_24"
                android:contentDescription="@null"
                app:tint="@android:color/white" />

        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Inception"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    tools:text="Watched"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvTimeAgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    tools:text="2 hours ago"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow indicator with modern style -->
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_subtle">
            
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/primary"
                android:contentDescription="@null" />
                
        </FrameLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

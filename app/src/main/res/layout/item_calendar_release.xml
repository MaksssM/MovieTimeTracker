<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/card_pressed">

    <LinearLayout
        android:id="@+id/releaseRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_calendar_release_movie">

        <!-- Type Accent Bar -->
        <View
            android:id="@+id/viewTypeBar"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#60A5FA"
            android:layout_marginEnd="12dp" />

        <!-- Poster with rounded corners -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="60dp"
            android:layout_height="88dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/poster_description"
                android:background="?attr/colorSurfaceVariant"
                tools:src="@tools:sample/backgrounds/scenic" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.15"
                tools:text="Аватар: Путь воды" />

            <!-- Type and Rating Badges -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- Movie/TV Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipType"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    tools:text="Фильм"
                    android:textSize="11sp"
                    app:chipBackgroundColor="#3060A5FA"
                    app:chipStrokeWidth="0dp"
                    android:textColor="#60A5FA"
                    app:ensureMinTouchTargetSize="false"
                    android:paddingHorizontal="6dp"
                    app:chipIcon="@drawable/ic_movie_24"
                    app:chipIconTint="#60A5FA"
                    app:chipIconSize="14dp"
                    app:chipMinHeight="28dp" />

                <!-- Rating Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRating"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    tools:text="8.5 ⭐"
                    android:textSize="11sp"
                    app:chipBackgroundColor="#30FBBF24"
                    app:chipStrokeWidth="0dp"
                    android:textColor="#FBBF24"
                    app:ensureMinTouchTargetSize="false"
                    android:paddingHorizontal="6dp"
                    android:layout_marginStart="6dp"
                    app:chipMinHeight="28dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow indicator -->
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_hint"
            android:contentDescription="@null"
            android:alpha="0.5" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

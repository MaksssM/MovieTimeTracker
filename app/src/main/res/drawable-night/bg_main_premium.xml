<?xml version="1.0" encoding="utf-8"?>
<!-- Premium gradient background for main screen - DARK THEME (nebula style) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Deep dark base - premium navy-black -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="160"
                android:startColor="#06080E"
                android:centerColor="#0B0F18"
                android:endColor="#0D1220"
                android:type="linear" />
        </shape>
    </item>

    <!-- Electric blue nebula glow - top left (flagship) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:centerX="0.05"
                android:centerY="0.08"
                android:startColor="#403B82F6"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Violet / indigo nebula - bottom right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="0.95"
                android:centerY="0.87"
                android:startColor="#388B5CF6"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Magenta / rose burst - center-left (новий) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="580dp"
                android:centerX="0.18"
                android:centerY="0.48"
                android:startColor="#28EC4899"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Teal / emerald nebula glow - center (новий) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="520dp"
                android:centerX="0.62"
                android:centerY="0.55"
                android:startColor="#2010B981"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Cyan sparkle - center right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="460dp"
                android:centerX="0.88"
                android:centerY="0.38"
                android:startColor="#2006B6D4"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Deep purple haze - top right corner -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="440dp"
                android:centerX="0.90"
                android:centerY="0.08"
                android:startColor="#1A7C3AED"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Subtle light diagonal sweep for premium depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#03FFFFFF"
                android:centerColor="#00000000"
                android:endColor="#03FFFFFF"
                android:type="linear" />
        </shape>
    </item>

</layer-list>

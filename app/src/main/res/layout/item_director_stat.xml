<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:gravity="center_vertical">

    <!-- Rank Badge -->
    <TextView
        android:id="@+id/tvRank"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        tools:text="1" />

    <!-- Director Photo -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/ivDirectorPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            tools:src="@tools:sample/avatars" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Director Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvDirectorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Christopher Nolan" />

        <TextView
            android:id="@+id/tvMoviesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="2dp"
            tools:text="8 фильмов • 18 ч" />

        <TextView
            android:id="@+id/tvMovieTitles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:alpha="0.7"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            tools:text="Inception, Interstellar, Tenet..." />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@drawable/bg_card_surface_gradient">

            <!-- Poster placeholder -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/posterPlaceholder"
                android:layout_width="75dp"
                android:layout_height="112dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/shimmerPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shimmer_gradient"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Title placeholder -->
            <View
                android:id="@+id/shimmerTitle"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/posterPlaceholder"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subtitle placeholder -->
            <View
                android:id="@+id/shimmerSubtitle"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/posterPlaceholder"
                app:layout_constraintTop_toBottomOf="@id/shimmerTitle" />

            <!-- Rating placeholder -->
            <View
                android:id="@+id/shimmerRating"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shimmer_placeholder_rounded"
                app:layout_constraintStart_toEndOf="@id/posterPlaceholder"
                app:layout_constraintTop_toBottomOf="@id/shimmerSubtitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

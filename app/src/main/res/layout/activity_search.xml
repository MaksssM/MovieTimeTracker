<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    tools:context=".ui.search.SearchActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="@color/primary_text"
            app:title="Пошук"
            app:titleTextColor="@color/primary_text"
            android:background="@android:color/transparent" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Premium Search Input -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/accent"
            android:background="@drawable/bg_search_modern">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSearch"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/primary"
                app:endIconMode="clear_text"
                app:endIconTint="@color/secondary_text"
                app:hintTextColor="@color/secondary_text"
                app:placeholderTextColor="@color/tertiary_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearchQuery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/tertiary_text"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/transparent" />

            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Filter Chips with improved visual feedback -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacing="12dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/btnFilterAll"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/filter_all"
                    android:textColor="@color/filter_chip_text_color"
                    android:fontFamily="sans-serif-medium"
                    app:chipBackgroundColor="@drawable/bg_filter_chip_selector"
                    app:checkedIconVisible="false"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btnFilterMovies"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/filter_movies"
                    android:textColor="@color/filter_chip_text_color"
                    android:fontFamily="sans-serif-medium"
                    app:chipBackgroundColor="@drawable/bg_filter_chip_selector"
                    app:chipIcon="@drawable/ic_movie_24"
                    app:chipIconTint="@color/filter_chip_text_color"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btnFilterTv"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/filter_tv_shows"
                    android:textColor="@color/filter_chip_text_color"
                    android:fontFamily="sans-serif-medium"
                    app:chipBackgroundColor="@drawable/bg_filter_chip_selector"
                    app:chipIcon="@drawable/ic_tv_24"
                    app:chipIconTint="@color/filter_chip_text_color"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btnSortRating"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/sort_by_rating"
                    android:textColor="@color/filter_chip_text_color"
                    android:fontFamily="sans-serif-medium"
                    app:chipBackgroundColor="@drawable/bg_filter_chip_selector"
                    app:chipIcon="@drawable/ic_star_filled_24"
                    app:chipIconTint="@color/filter_chip_text_color"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/btnSortPopularity"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/sort_by_popularity"
                    android:textColor="@color/filter_chip_text_color"
                    android:fontFamily="sans-serif-medium"
                    app:chipBackgroundColor="@drawable/bg_filter_chip_selector"
                    app:chipIcon="@drawable/ic_trending_up_24"
                    app:chipIconTint="@color/filter_chip_text_color"
                    app:checkedIconVisible="false" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Result Count -->
        <TextView
            android:id="@+id/tvResultCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/results_count_default"
            android:gravity="start"
            android:textSize="13sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/secondary_text" />

        <!-- Results RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchResults"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            tools:listitem="@layout/item_search_result" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_search"
                app:tint="@color/surface_variant"
                android:alpha="0.5"
                android:contentDescription="@string/empty_results" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/empty_results"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />
        </LinearLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.Material3.CircularProgressIndicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/primary"
            android:layout_marginBottom="24dp" />

        <!-- Search History Block -->
        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvHistoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recent_searches"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingTop="6dp">
                <LinearLayout
                    android:id="@+id/historyChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/btnClearHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_history"
                android:textColor="@color/accent"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Slider for min rating -->
        <LinearLayout
            android:id="@+id/ratingFilterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvMinRatingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/min_rating"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderMinRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="10"
                android:stepSize="0.5"
                android:value="0"
                app:haloColor="@color/primary"
                app:thumbColor="@color/accent"
                app:trackColorActive="@color/primary"
                app:trackColorInactive="@color/surface_variant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetFilters"
                style="@style/Widget.App.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_filters"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvActiveFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Фільтри: немає"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

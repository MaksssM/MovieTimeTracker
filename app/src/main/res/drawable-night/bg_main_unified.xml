<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Deep dark base - premium navy-black -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="160"
                android:startColor="#0A0E14"
                android:centerColor="#0D1117"
                android:endColor="#0F141A"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Primary blue glow at top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#203B82F6"
                android:centerColor="#103B82F6"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Accent glow at top-right -->
    <item 
        android:top="-100dp"
        android:right="-50dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:startColor="#20A78BFA"
                android:endColor="#00000000" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>
    
    <!-- Additional depth layer -->
    <item android:alpha="0.03">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#10FFFFFF"
                android:centerColor="#00000000"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>

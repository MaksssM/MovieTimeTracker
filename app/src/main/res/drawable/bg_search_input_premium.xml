<?xml version="1.0" encoding="utf-8"?>
<!-- Premium search input background with glass effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow -->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#153B82F6" />
        </shape>
    </item>
    
    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <solid android:color="#18FFFFFF" />
        </shape>
    </item>
    
    <!-- Inner border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

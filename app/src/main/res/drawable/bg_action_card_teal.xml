<?xml version="1.0" encoding="utf-8"?>
<!-- Quick action card - Teal tinted - Light Theme -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="135"
                android:startColor="#F0FDFA"
                android:endColor="#CCFBF1"
                android:type="linear" />
        </shape>
    </item>
    
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="19dp" />
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#60FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#2014B8A6" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

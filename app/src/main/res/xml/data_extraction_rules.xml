<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ (API 31+)
   Excludes sensitive data from cloud backup and device transfer.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude encrypted preferences -->
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <!-- Exclude search history -->
        <exclude domain="sharedpref" path="search_prefs.xml"/>
        <!-- Exclude Room database -->
        <exclude domain="database" path="movie_tracker_database"/>
        <exclude domain="database" path="movie_tracker_database-shm"/>
        <exclude domain="database" path="movie_tracker_database-wal"/>
        <!-- Exclude Firebase local cache -->
        <exclude domain="file" path="com.google.firebase"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow only non-sensitive preferences for device transfer -->
        <include domain="sharedpref" path="app_prefs.xml"/>
        <!-- Exclude everything else -->
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <exclude domain="database" path="movie_tracker_database"/>
    </device-transfer>
</data-extraction-rules>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="8dp">

    <!-- Date Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="14dp" android:paddingBottom="14dp"
        android:paddingHorizontal="4dp">

        <!-- Calendar Icon -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_icon_glow_accent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_calendar_24"
                app:tint="@android:color/white"
                android:contentDescription="@string/date" />

        </FrameLayout>

        <!-- Date Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 грудня 2025"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                tools:text="25 грудня 2025" />

            <TextView
                android:id="@+id/tvReleasesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="13sp"
                android:textColor="#C084FC"
                android:fontFamily="sans-serif-medium"
                tools:text="3 релізи" />

        </LinearLayout>

    </LinearLayout>

    <!-- Releases Container -->
    <LinearLayout
        android:id="@+id/eventsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Main background with subtle gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/surface_light_alpha_05"
                android:endColor="@color/surface_light_alpha_08"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke android:width="0.5dp" android:color="@color/divider" />
        </shape>
    </item>
    
    <!-- Top highlight -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#08FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="160"
                android:startColor="#0A0E14"
                android:centerColor="#0D1117"
                android:endColor="#0F141A" />
            <corners android:topRightRadius="24dp" android:bottomRightRadius="24dp" />
        </shape>
    </item>
    
    <!-- Subtle accent glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.1"
                android:centerY="0.3"
                android:startColor="#0A3B82F6"
                android:endColor="@android:color/transparent" />
            <corners android:topRightRadius="24dp" android:bottomRightRadius="24dp" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#1E293B" />
            <corners android:topRightRadius="24dp" android:bottomRightRadius="24dp" />
        </shape>
    </item>
    
</layer-list>

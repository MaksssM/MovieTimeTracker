<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="10dp"
    android:paddingHorizontal="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- Episode Checkbox -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cbEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#60A5FA"
        app:useMaterialThemeColors="false" />

    <!-- Episode Number Badge -->
    <TextView
        android:id="@+id/tvEpisodeNumber"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:background="@drawable/bg_episode_number"
        android:textColor="#B0FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="1" />

    <!-- Episode Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvEpisodeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Pilot" />

        <TextView
            android:id="@+id/tvEpisodeRuntime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#60FFFFFF"
            android:textSize="12sp"
            tools:text="58 хв" />
    </LinearLayout>

    <!-- Watched indicator -->
    <ImageView
        android:id="@+id/ivWatched"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_check_circle"
        app:tint="#22C55E"
        android:visibility="gone"
        android:contentDescription="@null"
        tools:visibility="visible" />

</LinearLayout>

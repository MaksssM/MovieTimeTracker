<?xml version="1.0" encoding="utf-8"?>
<!-- Glowing icon container - Purple Accent -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow -->
    <item
        android:left="-4dp"
        android:right="-4dp"
        android:top="-4dp"
        android:bottom="-4dp">
        <shape android:shape="oval">
            <solid android:color="#30A855F7" />
        </shape>
    </item>
    
    <!-- Main circle -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#C084FC"
                android:centerColor="#A855F7"
                android:endColor="#7C3AED"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top shine effect -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="3dp"
        android:bottom="26dp">
        <shape android:shape="oval">
            <solid android:color="#20FFFFFF" />
        </shape>
    </item>
    
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_background"
    android:stateListAnimator="@animator/card_press_animator">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewAccentBar"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_accent_bar_movie" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp">

            <!-- Poster with glow effect -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/posterCard"
                android:layout_width="80dp"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/poster_description"
                    android:background="#20FFFFFF"
                    tools:src="@tools:sample/backgrounds/scenic" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Content Container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/posterCard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.1"
                    tools:text="The Truman Show" />

                <!-- Rating and Type Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Rating Badge with glow -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rating_badge_premium"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="5dp" android:paddingBottom="5dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_star_filled_24"
                            app:tint="#FBBF24"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium"
                            tools:text="8.5" />

                    </LinearLayout>

                    <!-- Media Type Badge -->
                    <TextView
                        android:id="@+id/tvMediaType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:textColor="#60A5FA"
                        android:fontFamily="sans-serif-medium"
                        tools:text="Фільм" />

                </LinearLayout>

                <!-- Overview -->
                <TextView
                    android:id="@+id/tvOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.25"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="A story about a man who discovers his entire life is a reality TV show." />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

        <!-- Gradient top strip overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/bg_card_top_strip_search"
            android:alpha="0.9" />

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<!-- Premium gradient background for main screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Deep dark base with blue tint -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#0D1321"
                android:centerColor="#0A0E1A"
                android:endColor="#080B14"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Primary blue gradient sweep - top right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="0.9"
                android:centerY="0.0"
                android:startColor="#453B82F6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Purple accent gradient - left side -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="550dp"
                android:centerX="0.0"
                android:centerY="0.35"
                android:startColor="#38A855F7"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Cyan/teal glow - center bottom -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="450dp"
                android:centerX="0.5"
                android:centerY="1.1"
                android:startColor="#2806B6D4"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Green accent - bottom right corner -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="1.0"
                android:centerY="0.8"
                android:startColor="#2010B981"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Subtle light sweep for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="160"
                android:startColor="#08FFFFFF"
                android:centerColor="#03FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#1A1A2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Season Header - clickable to expand/collapse -->
        <LinearLayout
            android:id="@+id/seasonHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackground">

            <!-- Season Checkbox with custom styling -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#2560A5FA">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbSeason"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:button="@null"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:buttonTint="#60A5FA"
                    app:useMaterialThemeColors="false" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="14dp">

                <TextView
                    android:id="@+id/tvSeasonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Сезон 1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvSeasonInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#80FFFFFF"
                        android:textSize="13sp"
                        tools:text="7 / 10 серій" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/bg_dot" />

                    <TextView
                        android:id="@+id/tvSeasonTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6022C55E"
                        android:textSize="13sp"
                        tools:text="5 год 15 хв" />
                </LinearLayout>
            </LinearLayout>

            <!-- Progress Ring -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressSeason"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    app:indicatorColor="#22C55E"
                    app:trackColor="#20FFFFFF"
                    app:trackThickness="4dp"
                    app:indicatorSize="48dp"
                    android:progress="70" />

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#22C55E"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="70%" />
            </FrameLayout>

            <!-- Expand/Collapse Arrow with animation -->
            <ImageView
                android:id="@+id/ivExpandArrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="4dp"
                android:src="@drawable/ic_expand_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#60FFFFFF"
                android:contentDescription="@null" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#10FFFFFF"
            android:visibility="gone" />

        <!-- Episodes List - expandable -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEpisodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_episode_progress"
            tools:itemCount="3" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

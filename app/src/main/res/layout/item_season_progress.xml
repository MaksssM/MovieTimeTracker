<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#12FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Season Header - clickable to expand/collapse -->
        <LinearLayout
            android:id="@+id/seasonHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground">

            <!-- Season Checkbox -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbSeason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#60A5FA"
                app:useMaterialThemeColors="false" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvSeasonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Сезон 1" />

                <TextView
                    android:id="@+id/tvSeasonInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    tools:text="7 / 10 серій • 5 год 15 хв" />
            </LinearLayout>

            <!-- Progress indicator -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressSeason"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:indicatorColor="#22C55E"
                app:trackColor="#30FFFFFF"
                app:trackThickness="4dp"
                app:trackCornerRadius="2dp"
                android:progress="70" />

            <!-- Expand/Collapse Arrow -->
            <ImageView
                android:id="@+id/ivExpandArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_more"
                app:tint="#80FFFFFF"
                android:contentDescription="@null" />
        </LinearLayout>

        <!-- Episodes List - expandable -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEpisodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="8dp"
            android:paddingBottom="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_episode_progress" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- NIGHT THEME OVERRIDES - Premium Deep Dark Design -->
    <!-- Automatically applied when system is in dark mode -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <style name="Theme.MovieTimeTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorTertiary">@color/success</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Surface & Background Colors - Dark -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Status Bar - Dark -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- App Background with Premium Effects -->
        <item name="android:windowBackground">@drawable/bg_app_soft_mesh</item>
        
        <!-- Typography -->
        <item name="fontFamily">sans-serif</item>
        
        <!-- Outline & Dividers -->
        <item name="colorOutline">@color/divider</item>
        <item name="colorOutlineVariant">@color/divider</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
    </style>
</resources>

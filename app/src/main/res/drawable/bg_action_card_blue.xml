<?xml version="1.0" encoding="utf-8"?>
<!-- Quick action card - Blue tinted - Light Theme -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Soft colored background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="135"
                android:startColor="#EEF2FF"
                android:endColor="#DBEAFE"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle inner highlight -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="19dp" />
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#60FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Thin accent border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#203B82F6" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search_result_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <!-- Poster with rounded corners and shadow -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/posterCard"
                android:layout_width="80dp"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivPoster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/poster_description"
                        android:background="@color/card_background_alpha"
                        android:transitionName="poster_transition"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <!-- Gradient overlay for badge readability -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient_overlay_dark" />

                    <!-- Media Type Badge -->
                    <TextView
                        android:id="@+id/tvMediaType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_type_badge_movie"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="3dp" android:paddingBottom="3dp"
                        android:textSize="9sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"
                        tools:text="TV" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Content Container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@id/posterCard"
                app:layout_constraintEnd_toStartOf="@+id/btnDelete"
                app:layout_constraintStart_toEndOf="@id/posterCard"
                app:layout_constraintTop_toTopOf="@id/posterCard">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:minHeight="32dp"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.1"
                    tools:text="Інтерстеллар" />

                <!-- Release Date -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/primary_light"
                        android:contentDescription="@string/release_date" />

                    <TextView
                        android:id="@+id/tvReleaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium"
                        tools:text="2014" />

                </LinearLayout>

                <!-- Runtime Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_type_badge_movie"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_time"
                        app:tint="@android:color/white"
                        android:contentDescription="@string/runtime" />

                <TextView
                    android:id="@+id/tvRuntime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    tools:text="169 хв" />

            </LinearLayout>

            <!-- Rewatch Count Badge -->
            <LinearLayout
                android:id="@+id/layoutRewatchCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_chip"
                android:backgroundTint="#1510B981"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_replay_24"
                    app:tint="#10B981"
                    android:contentDescription="@string/rewatches" />

                <TextView
                    android:id="@+id/tvRewatchCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textSize="13sp"
                    android:textColor="#10B981"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.02"
                    tools:text="×3 разів" />

            </LinearLayout>

        </LinearLayout>

            <!-- Action Buttons Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Add Rewatch Button -->
                <FrameLayout
                    android:id="@+id/btnAddRewatch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_quick_action_glass"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_replay_24"
                        app:tint="#34D399"
                        android:contentDescription="@string/add_rewatch" />
                </FrameLayout>

            <!-- Delete Button with premium style -->
            <FrameLayout
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_quick_action_glass"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_delete_forever_24"
                    app:tint="@color/error_light"
                    android:contentDescription="@string/delete" />
            </FrameLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>


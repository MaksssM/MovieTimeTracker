<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#8B85FF"
                android:centerColor="#A855F7"
                android:endColor="#38E5FF"
                android:type="linear" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#6366F1"
                android:centerColor="#8B85FF"
                android:endColor="#00D4FF"
                android:type="linear" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#64748B" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</selector>


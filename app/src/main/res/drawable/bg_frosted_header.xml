<?xml version="1.0" encoding="utf-8"?>
<!-- Header - LIGHT THEME -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Solid white base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Bottom border -->
    <item
        android:top="-1dp"
        android:left="-1dp"
        android:right="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#E2E8F0" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

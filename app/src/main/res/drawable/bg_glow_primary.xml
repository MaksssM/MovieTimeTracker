<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer soft glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:gradientRadius="60%p"
                android:startColor="#6060A5FA"
                android:centerColor="#3060A5FA"
                android:endColor="@android:color/transparent"
                android:type="radial" />
        </shape>
    </item>
    
    <!-- Inner bright glow -->
    <item android:top="15dp" android:bottom="15dp" android:left="15dp" android:right="15dp">
        <shape android:shape="oval">
            <gradient
                android:gradientRadius="50%p"
                android:startColor="#9093C5FD"
                android:centerColor="@color/primary"
                android:endColor="@android:color/transparent"
                android:type="radial" />
        </shape>
    </item>
    
</layer-list>

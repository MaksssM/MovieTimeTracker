<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F8FAFF"
                android:centerColor="#EEF4FF"
                android:endColor="#F8FAFF"
                android:angle="135" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#26FFFFFF" />
            <corners android:radius="18dp" />
            <stroke android:width="1dp" android:color="#141A2634" />
        </shape>
    </item>
    <item android:drawable="@drawable/bg_glow_accent" android:gravity="end|bottom" android:alpha="0.08" />
</layer-list>

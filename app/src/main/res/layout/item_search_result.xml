<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border"
    android:background="@drawable/selector_card_modern"
    android:foreground="@drawable/selector_card_modern">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/card_bg_elevated">

        <!-- Premium Poster with glow -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/posterCard"
            android:layout_width="85dp"
            android:layout_height="128dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/poster_description"
                android:background="@drawable/bg_poster_placeholder"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Subtle overlay for better text readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay"
                android:alpha="0.1" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@id/posterCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/posterCard"
            app:layout_constraintTop_toTopOf="@id/posterCard">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/primary_text"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:letterSpacing="-0.01"
                tools:text="Шоу Трумена" />

            <!-- Rating Badge with enhanced design -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:background="@drawable/gradient_accent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_accent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        tools:text="★ 8.5" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Media Type Badge -->
            <TextView
                android:id="@+id/tvMediaType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="11sp"
                android:textColor="@color/secondary_text"
                android:fontFamily="sans-serif"
                tools:text="Фільм" />

            <!-- Overview -->
            <TextView
                android:id="@+id/tvOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Історія про чоловіка, який дізнається, що все його життя - це реаліті-шоу." />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

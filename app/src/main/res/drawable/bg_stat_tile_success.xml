<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Soft shadow effect -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#15000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Main gradient background - emerald/green -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#10B981"
                android:centerColor="@color/success"
                android:endColor="#059669"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Subtle shine overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#20FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
</layer-list>

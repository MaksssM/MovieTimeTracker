<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="160"
                android:startColor="#0F172A"
                android:centerColor="#1E293B"
                android:endColor="#0F172A"
                android:type="linear" />
        </shape>
    </item>
    <!-- Overlay gradient for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#00000000"
                android:centerColor="#1A3A5C"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
    <!-- Subtle blue accent -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00000000"
                android:centerColor="#0D253A"
                android:endColor="#14375A"
                android:type="linear" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme теперь светлая -->
    <style name="Theme.MovieTimeTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorTertiary">@color/success</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Светлые поверхности и тексты -->
        <item name="colorSurface">@color/background_surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/background_elevated_light</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Will track DayNight automatically -->
        <item name="android:windowBackground">@drawable/bg_app_soft_mesh</item>
        
        <!-- Typography -->
         <item name="fontFamily">sans-serif</item>
        
        <!-- Material3 compatibility attributes -->
        <item name="colorOutlineVariant">@color/divider_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
    </style>

    <!-- Light Theme Overrides оставлены для совместимости -->
    <style name="Theme.MovieTimeTracker.Light" parent="Theme.MovieTimeTracker">
        <item name="android:colorBackground">@color/soft_gradient_start_light</item>
        <item name="colorSurface">@color/background_surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOutline">@color/divider_light</item>
        <item name="colorOutlineVariant">@color/divider_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
    </style>

    <!-- Dark Theme Overrides в values-night -->
    <style name="Theme.MovieTimeTracker.Dark" parent="Theme.MovieTimeTracker">
        <item name="android:colorBackground">@color/soft_gradient_start_dark</item>
        <item name="colorSurface">@color/glass_background_dark</item> <!-- Glassy surface -->
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOutline">@color/divider_dark</item>
        <item name="colorOutlineVariant">@color/divider_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- COMPONENT STYLES -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <!-- Card Style: Soft & Glassy -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">24dp</item> <!-- Softer corners -->
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.App">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.App.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.App.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

     <style name="TextAppearance.App.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Button Style: Pill Shape -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item> <!-- Softer buttons -->
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Navigation Drawer Item -->
    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemShapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- Softer small items -->
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item> <!-- Match cards -->
    </style>
    
    <!-- Transparent Dialog Style -->
    <style name="TransparentDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <!-- Bottom Sheet Theme for TV Progress -->
    <style name="Theme.MovieTime.BottomSheet" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.MovieTime.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!-- Material Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/glass_background_dark</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>
        <item name="android:colorBackground">@color/glass_background_dark</item>
        <item name="colorOnBackground">@android:color/white</item>
        <!-- Fix Material 3 button attributes -->
        <item name="materialButtonStyle">@style/Widget.MovieTime.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MovieTime.Button.Outlined</item>
    </style>
    
    <style name="Widget.MovieTime.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/glass_background_dark</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MovieTime.BottomSheet</item>
    </style>
    
    <style name="ShapeAppearance.MovieTime.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Button styles for BottomSheet -->
    <style name="Widget.MovieTime.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>
    
    <style name="Widget.MovieTime.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/divider_dark</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="rippleColor">@color/divider_dark</item>
        <item name="cornerRadius">16dp</item>
    </style>


</resources>

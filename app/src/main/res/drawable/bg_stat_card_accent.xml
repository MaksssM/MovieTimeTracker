<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <solid android:color="#208B5CF6" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="135"
                android:startColor="#F5F3FF"
                android:endColor="#EDE9FE"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#DDD6FE" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Deep dark base - не чисто чорний, а глибокий темно-синій -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="160"
                android:startColor="#FF0A0E14"
                android:centerColor="#FF0D1117"
                android:endColor="#FF0F141A" />
        </shape>
    </item>
    
    <!-- Subtle blue ambient glow - top left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:centerX="0.05"
                android:centerY="0.1"
                android:startColor="#183B82F6"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Accent purple glow - bottom right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="0.95"
                android:centerY="0.85"
                android:startColor="#128B5CF6"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Cyan accent glow - center right for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:centerX="0.85"
                android:centerY="0.4"
                android:startColor="#0A06B6D4"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Very subtle warm accent - bottom left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="0.1"
                android:centerY="0.9"
                android:startColor="#08F59E0B"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Noise/grain effect overlay for premium feel -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#02FFFFFF"
                android:centerColor="#00000000"
                android:endColor="#02FFFFFF" />
        </shape>
    </item>
    
</layer-list>

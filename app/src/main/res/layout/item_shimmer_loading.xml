<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Poster placeholder -->
            <FrameLayout
                android:id="@+id/posterPlaceholder"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:background="#20FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/shimmerPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shimmer_gradient"/>
            </FrameLayout>

            <!-- Title placeholder -->
            <View
                android:id="@+id/shimmerTitle"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:background="#20FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/posterPlaceholder"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shimmer_gradient"/>
            </View>

            <!-- Subtitle placeholder -->
            <View
                android:id="@+id/shimmerSubtitle"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="80dp"
                android:background="#20FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/posterPlaceholder"
                app:layout_constraintTop_toBottomOf="@id/shimmerTitle">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shimmer_gradient"/>
            </View>

            <!-- Rating placeholder -->
            <View
                android:id="@+id/shimmerRating"
                android:layout_width="60dp"
                android:layout_height="14dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:background="#20FFFFFF"
                app:layout_constraintStart_toEndOf="@id/posterPlaceholder"
                app:layout_constraintTop_toBottomOf="@id/shimmerSubtitle">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shimmer_gradient"/>
            </View>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

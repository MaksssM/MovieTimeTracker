<?xml version="1.0" encoding="utf-8"?>
<!-- Type badge background (Movie/Time) - gradient -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient fill -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="135"
                android:startColor="#333B82F6"
                android:endColor="#3360A5FA"
                android:type="linear" />
        </shape>
    </item>

    <!-- Stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#503B82F6" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>

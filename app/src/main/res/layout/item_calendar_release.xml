<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorSurfaceVariant"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:stateListAnimator="@animator/card_pressed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:background="?attr/colorSurface">

        <!-- Poster with rounded corners and shadow -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="68dp"
            android:layout_height="100dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/poster_description"
                android:background="?attr/colorSurfaceVariant"
                tools:src="@tools:sample/backgrounds/scenic" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.15"
                tools:text="Аватар: Шлях води" />

            <!-- Type and Rating Badges -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <!-- Movie/TV Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipType"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    tools:text="Фільм"
                    android:textSize="11sp"
                    app:chipBackgroundColor="?attr/colorPrimary"
                    app:chipStrokeWidth="0dp"
                    android:textColor="@android:color/white"
                    app:ensureMinTouchTargetSize="false"
                    android:paddingHorizontal="8dp"
                    app:chipIcon="@drawable/ic_movie_24"
                    app:chipIconTint="@android:color/white" />

                <!-- Rating Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRating"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    tools:text="8.5 ⭐"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/status_watched"
                    app:chipStrokeWidth="0dp"
                    android:textColor="@android:color/white"
                    app:ensureMinTouchTargetSize="false"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow indicator -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="@null"
            android:alpha="0.6" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

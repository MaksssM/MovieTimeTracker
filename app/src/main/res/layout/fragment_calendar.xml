<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <!-- Month/Year Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrevMonth"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:icon="@drawable/ic_arrow_back_24"
                    app:iconTint="@color/text_primary"
                    android:contentDescription="@string/previous_month" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:id="@+id/tvMonthYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Грудень 2025"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnToday"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="@string/today"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_calendar_24"
                        app:iconSize="14dp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextMonth"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:icon="@drawable/ic_arrow_right"
                    app:iconTint="@color/text_primary"
                    android:contentDescription="@string/next_month" />

            </LinearLayout>

            <!-- Weekdays Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_mon"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_tue"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_wed"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_thu"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_fri"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_sat"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/accent"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_sun"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/rose"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Calendar Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCalendarDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="7"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_calendar_day" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content below calendar -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- Section Header -->
            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/upcoming_releases_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <!-- Events List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCalendarEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_calendar_event" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layoutEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar_24"
                        app:tint="@color/text_hint"
                        android:contentDescription="@string/empty_calendar" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_releases"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_back_later"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

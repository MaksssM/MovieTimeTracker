<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_premium">

    <!-- Floating orbs -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="top|end"
        android:translationX="60dp"
        android:translationY="-40dp"
        android:background="@drawable/bg_floating_orb_accent"
        android:alpha="0.3" />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|start"
        android:translationX="-40dp"
        android:translationY="40dp"
        android:background="@drawable/bg_floating_orb_primary"
        android:alpha="0.25" />

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <!-- Month/Year Navigation -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#15FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrevMonth"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_quick_action_glass"
                        app:icon="@drawable/ic_arrow_back_24"
                        app:iconTint="@android:color/white"
                        android:contentDescription="@string/previous_month" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="12dp">

                        <TextView
                            android:id="@+id/tvMonthYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Грудень 2025"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnToday"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/today"
                            android:textSize="12sp"
                            android:textColor="#60A5FA"
                            app:icon="@drawable/ic_calendar_24"
                            app:iconSize="14dp"
                            app:iconTint="#60A5FA"
                            android:visibility="gone"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNextMonth"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_quick_action_glass"
                        app:icon="@drawable/ic_arrow_right"
                        app:iconTint="@android:color/white"
                        android:contentDescription="@string/next_month" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weekdays Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_mon"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_tue"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_wed"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_thu"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_fri"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_sat"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#60A5FA"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/day_sun"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#F87171"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Calendar Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCalendarDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="7"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_calendar_day" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content below calendar -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_section_title_underline" />

                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upcoming_releases_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Events List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCalendarEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_calendar_event" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layoutEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="gone">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_icon_glow_primary">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar_24"
                        app:tint="@android:color/white"
                        android:contentDescription="@string/empty_calendar" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_releases"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_back_later"
                    android:textSize="14sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:indicatorColor="#60A5FA"
        app:trackColor="#3060A5FA"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>

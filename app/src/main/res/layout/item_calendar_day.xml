<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:padding="2dp"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <!-- Selection/Today Background -->
    <View
        android:id="@+id/dayBackground"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/bg_calendar_selected"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <!-- Day Number -->
    <TextView
        android:id="@+id/tvDayNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/text_on_dark_secondary"
        android:textSize="13sp"
        android:letterSpacing="0.02"
        app:layout_constraintBottom_toTopOf="@+id/indicatorContainer"
        app:layout_constraintEnd_toEndOf="@+id/dayBackground"
        app:layout_constraintStart_toStartOf="@+id/dayBackground"
        app:layout_constraintTop_toTopOf="@+id/dayBackground"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="15" />

    <!-- Today Ring (Outline) with gradient effect -->
    <View
        android:id="@+id/todayHighlight"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_calendar_today_glow"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/dayBackground"
        app:layout_constraintEnd_toEndOf="@+id/dayBackground"
        app:layout_constraintStart_toStartOf="@+id/dayBackground"
        app:layout_constraintTop_toTopOf="@+id/dayBackground" />

    <!-- Event Indicators Container (movie + tv dots) -->
    <LinearLayout
        android:id="@+id/indicatorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDayNumber"
        app:layout_constraintBottom_toBottomOf="@+id/dayBackground">

        <View
            android:id="@+id/dotMovie"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/dot_movie_blue"
            android:visibility="gone"
            android:layout_marginEnd="2dp"
            tools:visibility="visible" />

        <View
            android:id="@+id/dotTv"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/dot_tv_green"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Event Indicator Dot (legacy fallback) -->
    <View
        android:id="@+id/eventIndicator"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/circle_accent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/dayBackground"
        android:layout_marginBottom="2dp"
        tools:visibility="gone" />
        
    <!-- Event Count Badge (Small, top right) -->
    <TextView
        android:id="@+id/tvEventCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_event_count_micro"
        android:minWidth="16dp"
        android:minHeight="16dp"
        android:paddingHorizontal="3dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/dayBackground"
        app:layout_constraintEnd_toEndOf="@+id/dayBackground"
        android:layout_marginEnd="-4dp"
        android:layout_marginTop="-4dp"
        android:elevation="2dp"
        tools:text="3"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

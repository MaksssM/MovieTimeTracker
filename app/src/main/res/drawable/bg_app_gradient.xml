<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Clean light base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#FFF8FAFC"
                android:centerColor="#FFFFFFFF"
                android:endColor="#FFF1F5F9"
                android:angle="160" />
        </shape>
    </item>
    
    <!-- Soft blue glow overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="70%p"
                android:centerX="85%"
                android:centerY="15%"
                android:startColor="#103B82F6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Secondary purple accent glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="60%p"
                android:centerX="15%"
                android:centerY="85%"
                android:startColor="#108B5CF6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
</layer-list>

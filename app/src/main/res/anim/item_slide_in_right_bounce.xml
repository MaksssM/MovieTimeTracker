<?xml version="1.0" encoding="utf-8"?>
<!-- Elegant slide from right with overshoot bounce -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:interpolator/overshoot">
    <translate
        android:fromXDelta="40%p" android:toXDelta="0"
        android:duration="500" />
    <alpha
        android:fromAlpha="0" android:toAlpha="1"
        android:duration="400" />
    <scale
        android:fromXScale="0.85" android:fromYScale="0.85"
        android:toXScale="1" android:toYScale="1"
        android:pivotX="100%" android:pivotY="50%"
        android:duration="500" />
</set>

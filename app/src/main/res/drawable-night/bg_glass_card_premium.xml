<?xml version="1.0" encoding="utf-8"?>
<!-- Premium glass card with glow effect - DARK THEME -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Soft outer glow -->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <gradient
                android:angle="135"
                android:startColor="#155DA0FF"
                android:centerColor="#10A78BFA"
                android:endColor="#155DA0FF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass background with gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="145"
                android:startColor="#22FFFFFF"
                android:centerColor="#15FFFFFF"
                android:endColor="#0DFFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top shine highlight -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

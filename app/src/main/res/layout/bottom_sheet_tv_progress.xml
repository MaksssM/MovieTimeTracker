<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Handle Bar -->
            <View
                android:layout_width="48dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_handle_bar" />

            <!-- Header with gradient accent -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_episodes"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvTotalProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#80FFFFFF"
                        android:textSize="13sp"
                        tools:text="Обрано 0 з 62 серій" />
                </LinearLayout>

                <!-- Select All Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSelectAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/select_all"
                    android:textColor="#60A5FA"
                    android:textSize="13sp"
                    android:checkable="true"
                    app:chipBackgroundColor="#1560A5FA"
                    app:chipCornerRadius="20dp"
                    app:chipStrokeColor="#3060A5FA"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="true"
                    app:checkedIcon="@drawable/ic_check_circle"
                    app:checkedIconTint="#60A5FA"
                    app:chipIconTint="#60A5FA"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />
            </RelativeLayout>

            <!-- TV Show Info Card with gradient -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_gradient_card">

                    <!-- Poster with shadow -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivShowPoster"
                            android:layout_width="60dp"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:background="#2A2A3E"
                            tools:src="@tools:sample/backgrounds/scenic" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvShowTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:lineSpacingMultiplier="1.1"
                            tools:text="Breaking Bad" />

                        <TextView
                            android:id="@+id/tvShowSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="#A0FFFFFF"
                            android:textSize="13sp"
                            android:drawablePadding="6dp"
                            app:drawableStartCompat="@drawable/ic_episodes_small"
                            app:drawableTint="#60A5FA"
                            tools:text="5 сезонів • 62 серії" />

                        <!-- Total runtime -->
                        <TextView
                            android:id="@+id/tvTotalRuntime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:drawablePadding="6dp"
                            app:drawableStartCompat="@drawable/ic_time_small"
                            app:drawableTint="#22C55E"
                            tools:text="~47 год загалом" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Stats Row -->
            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Watched stat -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1522C55E">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvWatchedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#22C55E"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="45" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/watched"
                            android:textColor="#8022C55E"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Remaining stat -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#15F59E0B">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvRemainingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#F59E0B"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="17" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remaining"
                            android:textColor="#80F59E0B"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Time stat -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1560A5FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvWatchedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#60A5FA"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="32г" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_spent"
                            android:textColor="#8060A5FA"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Divider with label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="20dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#15FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:text="@string/seasons"
                    android:textColor="#60FFFFFF"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#15FFFFFF" />
            </LinearLayout>

            <!-- Loading indicator -->
            <LinearLayout
                android:id="@+id/loadingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone"
                tools:visibility="gone">

                <ProgressBar
                    android:id="@+id/progressLoading"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="#60A5FA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/loading_seasons"
                    android:textColor="#80FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Error state -->
            <LinearLayout
                android:id="@+id/errorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_error"
                    app:tint="#EF4444"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#EF4444"
                    android:textSize="14sp"
                    android:gravity="center"
                    tools:text="Помилка завантаження" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRetry"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/retry"
                    android:textColor="#60A5FA" />
            </LinearLayout>

            <!-- Seasons List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSeasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="12dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_season_progress" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Actions - Fixed at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_actions">

        <!-- Progress bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:indicatorColor="#22C55E"
            app:trackColor="#20FFFFFF"
            app:trackThickness="6dp"
            app:trackCornerRadius="3dp"
            android:progress="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/cancel"
                android:textColor="#A0FFFFFF"
                android:textSize="15sp"
                app:cornerRadius="16dp"
                app:strokeColor="#30FFFFFF"
                app:strokeWidth="1dp"
                app:rippleColor="#20FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1.5"
                android:layout_marginStart="8dp"
                android:text="@string/save_progress"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:backgroundTint="@null"
                android:background="@drawable/bg_gradient_button"
                app:rippleColor="#40FFFFFF"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

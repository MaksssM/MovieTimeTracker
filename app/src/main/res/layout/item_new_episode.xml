<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/card_background_glass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Episode Poster -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="65dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:background="@color/primary" />

                <!-- NEW badge -->
                <TextView
                    android:id="@+id/tvNewBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_badge_new"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="NEW"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tiny_text_size"
                    android:textStyle="bold" />

                <!-- Watched checkmark -->
                <ImageView
                    android:id="@+id/ivWatched"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_success"
                    android:src="@drawable/ic_check_24"
                    android:padding="4dp"
                    app:tint="@android:color/white"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Episode Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/body_large_text_size"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="The Last of Us" />

            <TextView
                android:id="@+id/tvEpisodeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/body_small_text_size"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="S1 E5 • Endure and Survive" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_calendar_24"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/tvAirDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_hint"
                    android:textSize="11sp"
                    tools:text="Вийшла вчора" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action button -->
        <ImageButton
            android:id="@+id/btnAction"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_button_circle_glass"
            android:src="@drawable/ic_play_24"
            app:tint="@color/primary"
            android:contentDescription="@string/play" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<!-- Premium search result card background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Soft outer glow with color -->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:angle="135"
                android:startColor="#0C60A5FA"
                android:centerColor="#08C084FC"
                android:endColor="#0C60A5FA"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass background with improved gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="145"
                android:startColor="#25FFFFFF"
                android:centerColor="#15FFFFFF"
                android:endColor="#0AFFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top shine effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#18FFFFFF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

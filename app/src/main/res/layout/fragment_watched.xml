<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Modern Header with Gradient Background -->
        <androidx.cardview.widget.CardView
            android:id="@+id/header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:backgroundTint="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_card"
                android:padding="28dp">

                <!-- Title with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="24dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_movie_time"
                        app:tint="@color/accent"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/tvHeaderTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/watched_header_title"
                        android:textSize="28sp"
                        android:textColor="@color/primary_text"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="-0.02" />
                </LinearLayout>

                <!-- Statistics Cards -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <!-- Total Count Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/card_bg_elevated">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_movie_time"
                                app:tint="@color/primary"
                                android:contentDescription="@string/total_count" />

                            <TextView
                                android:id="@+id/tvTotalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:textSize="32sp"
                                android:textColor="@color/primary_text"
                                android:fontFamily="sans-serif-medium"
                                android:text="0"
                                tools:text="24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textSize="12sp"
                                android:textColor="@color/tertiary_text"
                                android:text="Переглянуто"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Total Time Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/card_bg_elevated">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_time"
                                app:tint="@color/accent"
                                android:contentDescription="@string/total_time" />

                            <TextView
                                android:id="@+id/tvTotalTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:textSize="20sp"
                                android:textColor="@color/primary_text"
                                android:fontFamily="sans-serif-medium"
                                android:text="0 год"
                                android:maxLines="1"
                                android:ellipsize="end"
                                tools:text="48 год" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textSize="12sp"
                                android:textColor="@color/tertiary_text"
                                android:text="Час перегляду"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RecyclerView with improved styling -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWatched"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="100dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_watched" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_movie_time"
                app:tint="@color/surface_variant"
                android:alpha="0.5"
                android:contentDescription="@string/no_watched_items" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Немає переглянутих фільмів"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Почніть додавати фільми та серіали"
                android:textSize="14sp"
                android:textColor="@color/tertiary_text"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Modern Gradient FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="28dp"
        android:text="@string/search"
        android:icon="@drawable/ic_search"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        app:iconTint="@color/white"
        app:backgroundTint="@color/primary"
        app:elevation="12dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        android:contentDescription="@string/search" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<!-- Large stat card with premium gradient -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    
    <!-- Glass base -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="135"
                android:startColor="#22FFFFFF"
                android:centerColor="#12FFFFFF"
                android:endColor="#08FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="#25FFFFFF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>

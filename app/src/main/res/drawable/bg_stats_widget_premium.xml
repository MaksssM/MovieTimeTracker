<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Stats Widget Background - LIGHT THEME -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow / shadow -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="32dp" />
            <solid android:color="#1A3B82F6" />
        </shape>
    </item>

    <!-- Main background: cool blue-indigo gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="150"
                android:startColor="#EEF2FF"
                android:centerColor="#F1F5FF"
                android:endColor="#F8F5FF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle glass highlight top half -->
    <item android:bottom="50dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <gradient
                android:angle="90"
                android:startColor="#18FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="#C7D2FE" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>

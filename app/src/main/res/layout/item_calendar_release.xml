<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true">

    <!-- Poster Thumbnail -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="48dp"
        android:layout_height="72dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/poster_description"
            android:background="@color/shimmer_base"
            tools:src="@tools:sample/backgrounds/scenic" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="top">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фільм / Серіал"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            tools:text="The Matrix" />

        <!-- Meta Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <!-- Type Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipType"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="Фільм"
                android:textSize="10sp"
                app:chipBackgroundColor="@drawable/bg_chip"
                app:chipIcon="@drawable/ic_movie_24"
                app:chipIconSize="12dp"
                android:layout_marginEnd="6dp"
                tools:text="Фільм" />

            <!-- Rating Badge -->
            <LinearLayout
                android:id="@+id/ratingBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip"
                android:orientation="horizontal"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_star_filled_24"
                    app:tint="@color/accent"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textSize="10sp"
                    android:textColor="@color/accent"
                    android:fontFamily="sans-serif-medium"
                    tools:text="8.5" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

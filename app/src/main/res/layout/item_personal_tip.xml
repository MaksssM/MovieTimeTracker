<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/card_background_glass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- Tip Icon -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/iconContainer"
            android:background="@drawable/bg_icon_glow_primary">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:tint="@android:color/white"
                tools:src="@drawable/ic_lightbulb_24" />

        </FrameLayout>

        <!-- Tip Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Продовжте перегляд" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/body_small_text_size"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Ви зупинились на 5 сезоні Breaking Bad. До фіналу залишилось 8 серій!" />

        </LinearLayout>

        <!-- Action button -->
        <ImageButton
            android:id="@+id/btnAction"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button_circle_accent"
            android:src="@drawable/ic_arrow_forward_24"
            app:tint="@android:color/white"
            android:contentDescription="@string/open" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
